<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyShoppingList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondaryLightColor</item>
        <item name="colorPrimaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Shop.Enabled</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Shop.Disabled</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.Shop.Enabled" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/karla</item>
    </style>

    <style name="TextAppearance.Shop.Disabled" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>

        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/karla</item>
    </style>

    <style name="TextAppearance.Shop.Button" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/karla</item>
    </style>
</resources>